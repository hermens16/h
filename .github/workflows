name: Atualizar Sesc TV (manual)

on:
  workflow_dispatch:

jobs:
  atualizar:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Atualizar link do Sesc TV
        run: |
          NOVO_LINK="https://hqf6tcxuhk.singularcdn.net.br/live/0195ede1-c23c-7078-8f2a-25f982a9fc91/s1/playlist-1080p.m3u8?sjwt=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..XkTBNGeC33oEayMRMwAq8ZDMJd8HQsFONgiz8Mmg8As&uid=f779b430-4427-4b30-bedd-628487a65407"
          sed -i "s|{{SESC_TV_LINK}}|$NOVO_LINK|g" h.m3u8

      - name: Salvar alterações
        run: |
          git config user.name "github-actions"
          git config user.email "actions@github.com"
          git add h.m3u8
          git diff --cached --quiet || git commit -m "Atualiza link Sesc TV"
          git push